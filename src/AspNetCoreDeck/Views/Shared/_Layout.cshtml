<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - AspNetCoreDeck</title>

        <environment names="Development">
            <link href="~/lib/reveal.js/css/reveal.css" rel="stylesheet" />
            <link href="~/lib/reveal.js/css/theme/black.css" rel="stylesheet" />
            <link href="~/lib/reveal.js/lib/css/zenburn.css" rel="stylesheet" />
            <link href="~/css/site.css" rel="stylesheet" />
        </environment>
        <environment names="Staging,Production">
            <link href="~/lib/reveal.js/css/reveal.css" rel="stylesheet" />
            <link href="~/lib/reveal.js/css/theme/black.css" rel="stylesheet" />
            <link href="~/lib/reveal.js/lib/css/zenburn.css" rel="stylesheet" />
            <link href="~/css/site.min.css" rel="stylesheet"/>
        </environment>
        @Html.ApplicationInsightsJavaScript(TelemetryConfiguration)
    </head>
    <body>
        
            @RenderBody()


    <environment names="Development">
        <script src="~/lib/headjs/dist/1.0.0/head.js"></script>
        <script src="~/lib/reveal.js/js/reveal.js"></script>
        <script src="~/lib/angular/angular.js"></script>
        <script src="~/js/app.js"></script>
        <script src="~/js/site.js"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/headjs/dist/1.0.0/head.js"></script>
        <script src="~/lib/reveal.js/js/reveal.js"></script>
        <script src="~/lib/angular/angular.min.js"></script>
        <script src="~/js/site.min.js"></script>
    </environment>

        @RenderSection("scripts", required: false)
    </body>
</html>
